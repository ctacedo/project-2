<ol class="post-list">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a>{{title}}:</a>
        <span>{{body_text}}</span>
      </div>
      <div class="meta">
          {{user.username}} on {{created_at}}
      </div>
    </article>
  </li>
  {{/each}}
</ol>

<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="body_text">Posting</label>
      <input type="text" id="body_text" name="body_text" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

<script src="/javascript/posting.js"></script>